<config>
    <modules>
        <SM_Featured>
            <version>0.1.3</version>
        </SM_Featured>
    </modules>
    <frontend>
        <routers>
            <featured>
                <use>standard</use>
                <args>
                    <module>SM_Featured</module>
                    <frontName>featured</frontName>
                </args>
            </featured>
        </routers>
        <layout>
            <updates>
                <featured>
                    <file>sm/featured.xml</file>
                </featured>
            </updates>
        </layout>
    </frontend>
    <global>
        <blocks>
            <featured>
                <class>SM_Featured_Block</class>
            </featured>
        </blocks>
        <helpers>
            <featured>
                <class>SM_Featured_Helper</class>
            </featured>
        </helpers>
        <models>
            <featured>
                <class>SM_Featured_Model</class>
            </featured>
        </models>
        <resources>
            <sm_featured_setup>
                <setup>
                    <module>SM_Featured</module>
                </setup>
            </sm_featured_setup>
        </resources>
    </global>
</config>