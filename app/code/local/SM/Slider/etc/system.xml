<config>
    <tabs>
        <sm_extension translate="label" module="slider">
            <label>SM Extension</label>
            <sort_order>99999</sort_order>
        </sm_extension>
    </tabs>
    <sections>
        <slider_options translate="label" module="helloworld">
            <label>Slider Config Options</label>
            <tab>sm_extension</tab>
            <frontend_type>text</frontend_type>
            <sort_order>1000</sort_order>
            <show_in_default>1</show_in_default>
            <show_in_website>1</show_in_website>
            <show_in_store>1</show_in_store>
            <groups>
                <option translate="label">
                    <label>Config slider</label>
                    <frontend_type>text</frontend_type>
                    <sort_order>1</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    <fields>
                        <enable>
                            <label>Enable/Disable</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>1</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </enable>
                        <type>
                            <label>Type slider</label>
                            <frontend_type>select</frontend_type>
                            <source_model>slider/type</source_model>
                            <sort_order>2</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </type>
                        <qty>
                            <label>Qty images</label>
                            <frontend_type>select</frontend_type>
                            <source_model>slider/qty</source_model>
                            <sort_order>3</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </qty>
                    </fields>
                </option>
            </groups>
        </slider_options>
    </sections>
</config>